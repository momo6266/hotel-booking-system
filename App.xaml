                        <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderBrush=" #2e4053 " Padding="10" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
